<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diever">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStartlocatie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De startlocatie"
            />

        <Button
            android:id="@+id/btnRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De routes"
            />

        <Button
            android:id="@+id/btnContactgegevens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contactgegevens"
            />

        <Button
            android:id="@+id/btnMededelingen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mededelingen &amp; updates"
            />

        <Button
            android:id="@+id/btnSome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social media"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>